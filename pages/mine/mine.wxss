.body {
  width: 100%;
  height: 100%;
  background: #efefef;
}
/* 头像区 */
.page-head {
  width: 100%;
  height: 160rpx;
  background: #feb70f;
  text-align: center;
  padding-top: 40rpx;
}
.page-head image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.page-head .name {
  font-size: 26rpx;
}
/* 评价 收藏 地址 */
.page-section {
  background: #fff;
  margin-bottom: 10rpx;
}
.page-section .line {
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #ddd;
  font-size: 26rpx;
  color: #2e2e2e;
}
.page-section .line .more,
.page-section .line .money,
.page-section .line .time {
  float: right;
  margin-right: 30rpx;
}
